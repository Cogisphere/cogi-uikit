{
    "compilerOptions": {
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": "lib",
        "jsx": "react-jsx",
        "module": "ESNext",  
        "declaration": true,
        "declarationDir": ".",
        "sourceMap": true,
        "outDir": "./dist",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
    },
    "exclude": [
        "dist",
        "node_modules",
        "lib/**/*.test.tsx",
        "lib/**/*.stories.tsx",
    ],
    "include": [
        "lib/*"
    ]
  }